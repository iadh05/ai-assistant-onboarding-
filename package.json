{
  "name": "onboarding-chatbot",
  "private": true,
  "packageManager": "npm@10.9.2",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev:events\" \"npm:dev:cache\" \"npm:dev:core\" \"npm:dev:llm\" \"npm:dev:api\" \"npm:dev:web\" --names \"EVENTS,CACHE,CORE,LLM,API,WEB\" --prefix-colors \"cyan,red,yellow,magenta,blue,green\"",
    "dev:split": "start \"Backend\" cmd /k npm run dev:backend && start \"Frontend\" cmd /k npm run dev:frontend",
    "dev:backend": "concurrently \"npm:dev:events\" \"npm:dev:cache\" \"npm:dev:core\" \"npm:dev:llm\" \"npm:dev:api\" --names \"EVENTS,CACHE,CORE,LLM,API\" --prefix-colors \"cyan,red,yellow,magenta,blue\"",
    "dev:frontend": "npm run dev --workspace=@onboarding/web",
    "dev:events": "npm run dev --workspace=@onboarding/events",
    "dev:cache": "npm run dev --workspace=@onboarding/cache",
    "dev:core": "npm run dev --workspace=@onboarding/core",
    "dev:llm": "npm run dev --workspace=@onboarding/llm",
    "dev:api": "npm run dev:all --workspace=@onboarding/api",
    "dev:web": "npm run dev --workspace=@onboarding/web",
    "build": "turbo run build",
    "clean": "turbo run clean",
    "start:api": "npm run start:all --workspace=@onboarding/api",
    "start:web": "npm run start --workspace=@onboarding/web"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  }
}