{
  "name": "onboarding-chatbot",
  "private": true,
  "packageManager": "npm@10.9.2",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev:events\" \"npm:dev:cache\" \"npm:dev:core\" \"npm:dev:llm\" \"npm:dev:api\" \"npm:dev:web\" --names \"EVENTS,CACHE,CORE,LLM,API,WEB\" --prefix-colors \"cyan,red,yellow,magenta,blue,green\"",
    "dev:split": "start \"Backend\" cmd /k npm run dev:backend && start \"Frontend\" cmd /k npm run dev:frontend",
    "dev:backend": "concurrently \"npm:dev:events\" \"npm:dev:cache\" \"npm:dev:core\" \"npm:dev:llm\" \"npm:dev:api\" --names \"EVENTS,CACHE,CORE,LLM,API\" --prefix-colors \"cyan,red,yellow,magenta,blue\"",
    "dev:frontend": "npm run dev --workspace=@onboarding/web",
    "dev:events": "npm run dev --workspace=@onboarding/events",
    "dev:cache": "npm run dev --workspace=@onboarding/cache",
    "dev:core": "npm run dev --workspace=@onboarding/core",
    "dev:llm": "npm run dev --workspace=@onboarding/llm",
    "dev:api": "npm run dev:all --workspace=@onboarding/api",
    "dev:web": "npm run dev --workspace=@onboarding/web",
    "build": "turbo run build",
    "clean": "turbo run clean",
    "start:api": "npm run start:all --workspace=@onboarding/api",
    "start:web": "npm run start --workspace=@onboarding/web",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:minio": "docker compose up minio -d",
    "docker:reset": "docker compose down -v && docker compose up -d"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.700.0",
    "@aws-sdk/lib-storage": "^3.940.0",
    "@grpc/grpc-js": "^1.12.0",
    "@grpc/proto-loader": "^0.7.13",
    "@tanstack/react-query": "^5.0.0",
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "lucide-react": "^0.554.0",
    "mammoth": "^1.8.0",
    "multer": "^1.4.5-lts.1",
    "ollama": "^0.5.11",
    "pdf-parse": "^1.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.12",
    "@types/node": "^24.10.1",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "concurrently": "^8.2.2",
    "docx": "^9.5.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "pdf-lib": "^1.17.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "tsx": "^4.7.0",
    "turbo": "^2.0.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4"
  }
}
