# Environment Variables Template
# Copy this file to .env and customize as needed

# ===========================
# Ollama Configuration
# ===========================
# Ollama server URL (default: http://localhost:11434)
OLLAMA_HOST=http://localhost:11434

# LLM model to use (default: llama3.2)
OLLAMA_LLM_MODEL=llama3.2

# Embedding model to use (default: nomic-embed-text)
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# ===========================
# gRPC Configuration
# ===========================
# gRPC server host (default: 0.0.0.0)
GRPC_HOST=0.0.0.0

# Gateway (public-facing, client connects here)
GATEWAY_PORT=8080

# Backend Microservices (internal, not exposed to clients)
DOCUMENT_SERVICE_PORT=50051
DOCUMENT_SERVICE_URL=localhost:50051

CHAT_SERVICE_PORT=50052
CHAT_SERVICE_URL=localhost:50052

SYSTEM_SERVICE_PORT=50053
SYSTEM_SERVICE_URL=localhost:50053

# ===========================
# Vector Store Configuration
# ===========================
# Path to vector store file (default: ./vector-store.json)
VECTOR_STORE_PATH=./vector-store.json

# Maximum chunk size for documents (default: 1000)
MAX_CHUNK_SIZE=1000

# Chunk overlap size (default: 200)
CHUNK_OVERLAP=200

# Number of top results to retrieve for RAG (default: 5)
RAG_TOP_K=5

# ===========================
# Gemini Configuration
# ===========================
# Google Gemini API key (get from https://aistudio.google.com/apikey)
GEMINI_API_KEY=your-gemini-api-key-here

# Gemini model to use (default: gemini-2.5-flash)
# Options: gemini-2.5-flash, gemini-1.5-flash, gemini-1.5-pro
GEMINI_MODEL=gemini-2.5-flash

# ===========================
# MinIO Configuration (Object Storage)
# ===========================
# MinIO is an S3-compatible object storage for document files
# Run: docker compose up -d minio

# MinIO server endpoint (without protocol)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000

# MinIO credentials (must match docker-compose.yml)
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# Bucket for storing uploaded documents
MINIO_BUCKET=documents

# Use SSL (false for local development, true for production)
MINIO_USE_SSL=false
